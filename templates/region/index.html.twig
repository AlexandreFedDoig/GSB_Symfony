{% extends 'base.html.twig' %}

{% block title %}Region index{% endblock %}

{% block body %}
    <h1>Region index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>RegCode</th>
                <th>SecCode</th>
                <th>RegNom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for region in regions %}
            <tr>
                <td>{{ region.regCode }}</td>
                <td>{{ region.secCode }}</td>
                <td>{{ region.regNom }}</td>
                <td>
                    <a href="{{ path('region_show', {'regCode': region.regCode}) }}">show</a>
                    <a href="{{ path('region_edit', {'regCode': region.regCode}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('region_new') }}">Create new</a>
{% endblock %}
