{% extends 'base.html.twig' %}

{% block title %}Secteur index{% endblock %}

{% block body %}
    <h1>Secteur index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>SecCode</th>
                <th>SecLibelle</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for secteur in secteurs %}
            <tr>
                <td>{{ secteur.secCode }}</td>
                <td>{{ secteur.secLibelle }}</td>
                <td>
                    <a href="{{ path('secteur_show', {'secCode': secteur.secCode}) }}">show</a>
                    <a href="{{ path('secteur_edit', {'secCode': secteur.secCode}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('secteur_new') }}">Create new</a>
{% endblock %}
