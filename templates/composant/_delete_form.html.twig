<form method="post" action="{{ path('composant_delete', {'cmpCode': composant.cmpCode}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ composant.cmpCode) }}">
    <button class="btn">Delete</button>
</form>
