{% extends 'base.html.twig' %}

{% block title %}Famille index{% endblock %}

{% block body %}
    <h1>Famille index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>FamCode</th>
                <th>FamLibelle</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for famille in familles %}
            <tr>
                <td>{{ famille.famCode }}</td>
                <td>{{ famille.famLibelle }}</td>
                <td>
                    <a href="{{ path('famille_show', {'famCode': famille.famCode}) }}">show</a>
                    <a href="{{ path('famille_edit', {'famCode': famille.famCode}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('famille_new') }}">Create new</a>
{% endblock %}
