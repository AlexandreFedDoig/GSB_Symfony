{% extends 'base.html.twig' %}

{% block title %}Presentation index{% endblock %}

{% block body %}
    <h1>Presentation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>PreCode</th>
                <th>PreLibelle</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for presentation in presentations %}
            <tr>
                <td>{{ presentation.preCode }}</td>
                <td>{{ presentation.preLibelle }}</td>
                <td>
                    <a href="{{ path('presentation_show', {'preCode': presentation.preCode}) }}">show</a>
                    <a href="{{ path('presentation_edit', {'preCode': presentation.preCode}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('presentation_new') }}">Create new</a>
{% endblock %}
