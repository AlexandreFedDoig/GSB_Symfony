<form method="post" action="{{ path('presentation_delete', {'preCode': presentation.preCode}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ presentation.preCode) }}">
    <button class="btn">Delete</button>
</form>
